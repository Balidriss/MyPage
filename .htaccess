Options +SymLinksIfOwnerMatch
RewriteEngine On
# Rewrite URLs to public folder if they're not already there
RewriteCond %{REQUEST_URI} !^/public/
RewriteRule ^(.*)$ /public/$1 [L]
# If the request is for a file or directory that exists, don't rewrite
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]
# If the request is not for a file or directory that exists, rewrite to index.php
RewriteRule ^(.*)$ /index.php [L]